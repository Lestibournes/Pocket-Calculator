<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Clear" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

    <style name="AppTheme.Delete" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

    <style name="AppTheme.Equals" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

    <style name="AppTheme.Signs" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

    <style name="AppTheme.Answer" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/pink</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

    <style name="AppTheme.Dot" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple</item>
        <item name="android:textColor">@color/text_background</item>
    </style>

</resources>
